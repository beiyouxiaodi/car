page{
  background-color: #E4E4E4
}
.title{
  display: block;
  margin-top: 100rpx;
  color: #333;
  font-size: 50rpx;
  line-height: 2.5;
  text-indent: 30rpx;
  font-weight: bold;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.banner{
  display: block;
  width: 65%;
  height: 150rpx;
  margin:  40rpx auto;
}
/*分割线样式*/
.divLine{
 background: #ccc;
 width: 90%;
 height: 5rpx;
 margin: auto;
}
.form_doctor{
  overflow: hidden;
  position: relative;
  margin-top: 0;
  font-size: 32rpx;
  color: #1E1E1E;
  line-height: 1.2;
}
.section{
  padding: 30rpx;
}
.btn_submit1{
   margin: 0 40rpx;
   background-color: #ccc;
}
.btn_submit2{
   margin: 30rpx 40rpx;
   background-color: #fff;
}
.prompt_center{
  display: block;
  font-size: 50rpx;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  text-align: center;
}
.prompt_content .prompt_center{
  font-size: 34rpx;
}
